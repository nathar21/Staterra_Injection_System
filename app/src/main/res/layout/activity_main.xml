<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#798251"
    android:orientation="vertical"
    android:dividerPadding="70dp"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="System Configuration"
        android:id="@+id/systemConfig"
        android:textColor="#ffffffff"
        android:height="10dp"
        android:clickable="true"
        android:background="#3d3015"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="System Status"
        android:id="@+id/systemStatus"
        android:textColor="#ffffffff"
        android:height="10dp"
        android:singleLine="false"
        android:clickable="true"
        android:background="#3d3015"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Data Exportation"
        android:id="@+id/dataExport"
        android:layout_weight="0.35"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:height="10dp"
        android:singleLine="false"
        android:enabled="true"
        android:background="#3d3015"
        android:layout_marginTop="5dp" />

</LinearLayout>
