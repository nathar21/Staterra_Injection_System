<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#ff171717"
    android:orientation="vertical"
    android:dividerPadding="70dp"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Current Environmental Status"
        android:id="@+id/button"
        android:textColor="#ff1a1cff"
        android:clickable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Data Exportation"
        android:id="@+id/button2"
        android:layout_gravity="center_vertical"
        android:textColor="#ff1a1cff"
        android:singleLine="true"
        android:clickable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Current Tank Status"
        android:id="@+id/button3"
        android:layout_weight="0.35"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:textColor="#ff4b2eff" />

</LinearLayout>
